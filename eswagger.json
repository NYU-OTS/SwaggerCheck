{
	"swagger": "2.0",
	"info": {
		"title": "Email Notification Service",
		"description": "The mailing system at NYU OTSS",
		"version": "1.0.0"
	},
	"host": "localhost",
	"paths": {
		"/email": {
			"post": {
				"summary": "Send email",
				"description": "Creates an email and sends it",
				"consumes": [
					"application/json"
				],
				"parameters": [
					{
						"name": "Email Params",
						"in": "body",
						"description": "The parameters needed to send an email",
						"required": true,
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/Email"
							}
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK"
					},
					"400": {
						"description": "Invalid input"
					}
				}
			}
		}
	},
	"definitions": {
		"Email": {
			"type": "object",
			"required": [
				"To",
				"Subject",
				"Body"
			],
			"properties": {
				"To": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"Subject": {
					"type": "string"
				},
				"Body": {
					"type": "string"
				},
				"CC": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"BCC": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		}
	}
}
